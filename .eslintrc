{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    "browser": true,
    "es2020": true
  },
  "rules": {
    "import/no-unresolved": [0],
    "import/extensions": ["error", "always", { "ignorePackages": true }]
  },
  "settings": {
    "import/extensions": [".js", ".jsx"]
  }
}
